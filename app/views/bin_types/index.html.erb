<h1>Listing bin_types</h1>

<%= link_to 'New bin_type', new_bin_type_path %>
<br />
<br />
<% form_for @search do |f| %>
<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Maximum load</th>
    <th></th>
    </tr>
  <tr>
    <td align="center"> <%= f.text_field :name_like %></td>
    <td align="center"> <%= f.text_field :description_like %></td>
    <td align="center"> <%= f.text_field :maximum_load_equals %></td>
    <td align="center"> <%= f.submit "search" %></td>
  </tr>
</table>
<% end %>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
	  <th>Maximum load</th>
   
    <th>Action</th>
  </tr>

<% @bin_types.each do |bin_type| %>
  <tr class="<%= cycle("list0", "list1")%>">
    <td><%=h bin_type.name %></td>
    <td><%=h bin_type.description %></td>
    <td align="center"><%=h bin_type.maximum_load %></td>
  
    <td class="action">
    <%= link_to 'Edit', edit_bin_type_path(bin_type) %>
    <%= link_to 'Destroy', bin_type, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= will_paginate @bin_types %>
