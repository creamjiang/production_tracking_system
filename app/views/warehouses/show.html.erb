<br />
<%= link_to 'Edit', edit_warehouse_path(@warehouse) %> |
<%= link_to 'Back', warehouses_path %>
<br /><br />
<p>
  <b>Name:</b>
  <%=h @warehouse.name %>
</p>

<p>
  <b>Location:</b>
  <%=h @warehouse.location %>
</p>


<p>
  <b>Remark:</b>
  <%=h @warehouse.remark %>
</p>

<hr />

<% form_tag remove_item_warehouse_path(@warehouse) do %>
<h3>Destinations</h3>
<table>
  <tr>
    <th style="width:5%"></th>
    <th>Name</th>
    <th>Location</th>
    <th>Remark</th>
  </tr>

  <% @warehouse.destinations.each do |d| %>
   <tr class="<%= cycle("list0", "list1") %>">
    <td align="center">
      <%= check_box_tag "item[#{d.id.to_s}][selected]" %>
    </td>
    <td>
      <%= d.name %>
    </td>
    <td>
      <%= d.location %>
    </td>
    <td>
      <%= d.remark %>
    </td>
  </tr>

  <% end %>
  <tr>
    <th align="center"><%= submit_tag("Remove") unless @warehouse.destinations.empty? %> </th>
    <th colspan="3"></th>
  </tr>
</table>
<% end %>

<br />
<hr />
<br />

<% form_tag add_item_warehouse_path(@warehouse) do %>
<table>
  <tr>
    <td>Name</td><td><%= text_field_tag "item[name]"   %> </td>
  </tr>
  <tr>
    <td>Location</td><td><%= text_field_tag "item[location]"   %> </td>
  </tr>
  <tr>
    <td>Remark</td><td><%= text_field_tag "item[remark]"   %> </td>
  </tr>
  <tr>
    <td></td><td><%= submit_tag "Add" %> </td>
  </tr>
</table>

<% end %>


