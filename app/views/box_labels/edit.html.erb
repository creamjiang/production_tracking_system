<h1>Editing Label</h1>
<br />

<%= link_to 'Back', @box_label %> 

<br />

<% form_for(@box_label) do |f| %>
  <%= f.error_messages %>

  <p>
    <b>Label No<b/>
    <%= f.text_field :code, :size => 40 %>
  </p>

<p>
  <b>Quantity:</b>
  <%= f.text_field :quantity %>
</p>

  <p>
  <b>Part No:</b>
  <%=h @box_label.part_number %>
</p>

<p>
  <b>Part Description:</b>
  <%=h @box_label.description %>
</p>

<p>
  <b>Machine ID:</b>
  <%=h @box_label.machine_number %>
</p>

<p>
  <b>Boxed datetime:</b>
  <%=h @box_label.boxed_date_time.strftime("%d-%m-%Y %H:%M")  %>
</p>

<p>
  <b>Operator:</b>
  <%=h @box_label.employee_name %>
</p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>






