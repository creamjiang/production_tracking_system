<h1>Listing components</h1>

<%= link_to 'New component', new_category_path %>
<br />
<br />

<table> 
  <tr>
    <th>Name</th>
    <th>Description</th>
	<th>Action</th>
  </tr>

<% @categories.each do |category| %>
  <tr class="<%= cycle("list0", "list1")%>">
    <td><%=h category.name %></td>
    <td><%=h category.description %></td>
    <td class="action"><%= link_to 'Show', category %>
    <%= link_to 'Edit', edit_category_path(category) %>
    <%= link_to 'Destroy', category, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

