<h1>Listing Products</h1>

<table>
  <tr>
   
    <th>Part Number</th>
    <th>Part Name</th>
    <th>Side</th>
	<th>Visible</th>

  </tr>
  <% for pro in @machine.attached_products %>
<tr class="<%= cycle("list0", "list1") %>">
   
    <td><%=h pro.product.part_number %></td>
	<td><%=h pro.product.part_name %></td>
	<td><%=h pro.product.side %></td>
	<td align="center"><%= check_box_tag "visible", "yes",  pro.visible, :disabled => true  %></td>
     </tr>
  <% end %>
</table>

