<h1>Listing Employees</h1>

<table>
  <tr>
   
    <th>Employee ID</th>
    <th>Name</th>

    <th>Department</th>

  </tr>
  <% for emp in @machine.employees %>
<tr class="<%= cycle("list0", "list1") %>">
   
    <td><%=h emp.employee_number %></td>
	<td><%=h emp.name %></td>
	<td><%=h emp.department.name %></td>
     </tr>
  <% end %>
</table>

