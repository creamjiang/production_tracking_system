<h1>New employee</h1>

<% form_for(@employee) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :employee_number %><br />
    <%= f.text_field :employee_number %>
  </p>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </p>
  
   <p>
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation %>
  </p>
  
  <p>
  	<%= f.label :department_id %><br />
    <%= f.select :department_id, Department.all.map {|c| [c.name, c.id]} %>
  </p>
	
  <p>
    <%= f.label :remark %><br />
    <%= f.text_area :remark, :size => '60x4'  %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'View All', employees_path %>