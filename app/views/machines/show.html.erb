
<br />
<% unless is_application_admin? or is_supervisor? %>
<%= link_to 'Edit', edit_machine_path(@machine) %> |
<%= link_to 'Destroy', @machine, :confirm => 'Are you sure?', :method => :delete %> |
<%= link_to 'New machine', new_machine_path %> |
<% end %>
<%= link_to 'View All', machines_path %> 

<br />
<p>
  <b>Machine number:</b>
  <%=h @machine.machine_number %>
</p>

<p>
  <b>Asset number:</b>
  <%=h @machine.asset_number %>
</p>

<p>
  <b>Mac Address:</b>
  <%=h @machine.mac_address %>
</p>

<p>
  <b>Data Mode:</b>
  <%=h @machine.data_mode %>
</p>

<p>
  <b>Scan Folder:</b>
  <%=h @machine.scan_folder %>
</p>

<p>
  <b>Description:</b>
  <%=h @machine.description %>
</p>


<br />
<hr/>


<h4>
	Attached Employees  
	<% unless is_application_admin? or is_supervisor? %>
	| <%= link_to "Edit", attach_employee_machine_path(@machine) %>
	<% end %>
</h4>

<table>
	<tr>
		<th>Employee ID</th>
		<th>Name</th>
		<th>Department</th>
	</tr>
	
	<% for emp in @machine.employees %>
	<tr class="<%= cycle("list0", "list1") %>">
		<td><%= emp.employee_number %></td>
		<td><%= emp.name %></td>
		<td><%= emp.department.name %></td>		
	</tr>
	<% end %>
	
</table>
 <br />
 
 <br />
<hr/>

<h4>
	Attached Products | <%= link_to "Edit", attach_product_machine_path(@machine) %>
</h4>

<table>
	<tr>
		<th>Part Name</th>
		<th>Part Number</th>
		<th>Category</th>
		<th>Side</th>
	</tr>
	
	<% for pro in @machine.products %>
	<tr class="<%= cycle("list0", "list1") %>">
		<td><%= pro.part_name %></td>
		<td><%= pro.part_number %></td>
		<td><%= pro.category.name rescue "" %></td>
		<td><%= pro.side %></td>
        </tr>
	<% end %>
	
</table>


<br />
 
 <br />
<hr/>

<h4>
	Attached Shifts 
	<% unless is_application_admin? or is_supervisor? %>
	| <%= link_to "Edit", attach_shift_machine_path(@machine) %>
	<% end %>
</h4>

<table>
	<tr>
		<th>Shift Name</th>
		<th>Start Time</th>
		<th>End Time</th>
		
	</tr>
	
	<% for sh in @machine.shifts %>
	<tr class="<%= cycle("list0", "list1") %>" align="center">
		<td><%= sh.name %></td>
		<td><%= sh.time_start.strftime("%H:%M") %></td>
		<td><%= sh.time_end.strftime("%H:%M") %></td>
		
	</tr>
	<% end %>
	
</table>

