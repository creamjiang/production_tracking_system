
<% title "Production Reject Report" %>

<%= link_to "Back to Report", :action => "index" %> |
<%= link_to "Group by Machine", :action => "group_by_machine", :from => params[:from], :to => params[:to] %> | 
<%= link_to "Group by Employee", :action => "group_by_employee", :from => params[:from], :to => params[:to] %> | 
<%= link_to "Group by Reject Code", :action => "group_by_reject_code", :from => params[:from], :to => params[:to] %> | 
<%= link_to "Export to Excel", :action => "reject_report", :from => params[:from], :to => params[:to], :category => "pdf" %>

<br /><br />
<table>
	<tr>
		<th>Date</th>
		<th>Machine</th>
		<th>Employee</th>
		<th>Reject Code</th>
		
	</tr>
	<% for t in @transactions %>
	<tr>
		<td align="center"><%= t.created_at.strftime("%d-%m-%Y %H:%M") %></td>
		<td align="center"><%= t.machine.machine_number %></td>
		<td align="center"><%= t.employee.employee_number %></td>
		<td><%= t.reject_code.description %></td>
		
	</tr>
	<% end %>
</table>
