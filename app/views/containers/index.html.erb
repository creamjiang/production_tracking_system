<h1>Listing containers</h1>

<%= link_to 'New container', new_container_path %>
<br />
<br />


<table>
  <tr>
    <th>Product</th>
    <th>Bin</th>
    <th>Maximum load</th>
	<th>Action</th>
  </tr>

<% @containers.each do |container| %>
  <tr class="<%= cycle("list0", "list1")%>">
    <td><%=h container.product_id %></td>
    <td><%=h container.bin_id %></td>
    <td><%=h container.maximum_load %></td>
    <td class="action"><%= link_to 'Show', container %>
    <%= link_to 'Edit', edit_container_path(container) %>
    <%= link_to 'Destroy', container, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

