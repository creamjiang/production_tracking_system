<% content_for :head do %>
<style type="text/css">

img {
	border: none;
}

/* ---------- gallery styles start here ----------------------- */
.gallery {
	list-style: none;
	margin: 0;
	padding: 0;
	width: 90%;
	padding-left:100px;

}
.gallery li {
	padding: 10px;
	margin: 0;
	float: left;
	position: relative;
	width: 180px;
	height: 130px;
}
.gallery li:hover img {
	border-color: #000;
}
.gallery img {
	background: #fff;
	border: solid 1px #888;
	padding: 5px;
}

body {
	background-color: #F6CECE;
}

	.select {background:#fff;border:1px solid #ccc;color:#000;font-family:verdana, tahoma, sans-serif;font-size: 2em;width:90%;height:55px;margin-left:6px;padding-left:5px;line-height:20px;}
	.button {font-family:verdana, tahoma, sans-serif;font-size: 0.8em;width:25%;height:40px;line-height:10px;}
	.back_button {font-family:verdana, tahoma, sans-serif;font-size: 0.8em;width:120px;height:40px;line-height:10px;}
</style>

<script language="javascript" type="text/javascript">
	function gotoPage(reason_id, attach_id)
	{

	  window.setTimeout('window.location="http://'+location.host+'/flow/reject?reject_code_id='+reason_id+'&id='+attach_id+'&area_id=<%= @reject_area %>"; ',500);
	  playGood();
    }
</script>

<% end %>
