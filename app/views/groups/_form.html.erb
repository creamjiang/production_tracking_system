<% form_for @group do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :name %><br />

	   <% if @group.builtin %>
	     <%= f.text_field :name, :readonly => true %>
	   <% else %>
	     <%= f.text_field :name %>
	   <% end %>	
  </p>
  
  <p>
    <%= f.label :alias %><br />
    <%= f.text_field :alias %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description, :size => '60x4' %>
  </p>

  <p>
    <%= f.label :level %><br />
    <%= f.select :position, (9.downto(1)).to_a %>
  </p>
  <p><%= f.submit "Submit" %></p>
<% end %>
