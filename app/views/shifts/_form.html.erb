<% form_for @shift do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :time_start %><br />
    <%= f.time_select :time_start %>
  </p>
  <p>
    <%= f.label :time_end %><br />
    <%= f.time_select :time_end %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description, :size => "60x6" %>
  </p>
  <p><%= f.submit "Submit" %></p>
<% end %>
