<h1>Listing departments</h1>

<%= link_to 'New department', new_department_path %>
<br />
<br />

<table>
  <tr>
    <th>Name</th>
	<th>Alias</th>
	<th>Level</th>
	<th>Built-in</th>
 
	<th>Action</th>
  </tr>

<% @departments.each do |department| %>
  <tr class="<%= cycle("list0", "list1")%>">
    <td><%=h department.name %></td>
    <td><%=h department.alias %></td>
	<td align="center"><%=h department.position %></td>
	<td align="center"><%=h department.builtin %></td>
    <td class="action"><%= link_to 'Show', department %>
    <%= link_to 'Edit', edit_department_path(department) %>
	<%= link_to 'Destroy', department, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

