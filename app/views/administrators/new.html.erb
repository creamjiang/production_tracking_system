<h1>New administrator</h1>

<% form_for(@administrator) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :employee_number, "Employee No" %><br />
    <%= f.text_field :employee_number %>
  </p>
  <p>
      <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
    <%= f.label :login %><br />
    <%= f.text_field :login %>
  </p>
    <p>
  	<%= f.label :group_id %><br />
    <%= f.select :group_id, Group.all.map {|c| [c.name, c.id]} %>
  </p>
  <p>
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </p>
  <p>
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation %>
  </p>

  <p>
    <%= f.label :remark %><br />
    <%= f.text_area :remark, :size => '60x4'  %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'View All', administrators_path %>