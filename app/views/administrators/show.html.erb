<%= link_to 'Edit', edit_administrator_path(@administrator) %> | 
<%= link_to 'Destroy', @administrator, :confirm => 'Are you sure?', :method => :delete %> | 
<%= link_to 'Change Password', change_password_administrator_path(@administrator) %> |
<%= link_to 'View All', administrators_path %> | 
<%= link_to 'New administrator', new_administrator_path %>
<br />

<p>
  <b>Employee No:</b>
  <%=h @administrator.employee_number %>
</p>
<p>
  <b>Name:</b>
  <%=h @administrator.name %>
</p>

<p>
  <b>Login:</b>
  <%=h @administrator.login %>
</p>

<p>
  <b>Group:</b>
  <%=h @administrator.group.name %>
</p>

<p>
  <b>Remark:</b>
  <%=h @administrator.remark %>
</p>

<br />
<hr />

<h4>
	Attached Procedure | <%= link_to "Edit", attach_procedure_administrator_path(@administrator) %>
</h4>

<table>
	<tr>
		<th>Routing</th>
		<th>Process</th>	
	</tr>
	
	<% for pro in @administrator.routing_procedures %>
	<tr class="<%= cycle("list0", "list1") %>">
		<td><%= pro.routing.name %></td>
		<td><%= pro.routing_process.name %></td>
		
	</tr>
	<% end %>
	
</table>


